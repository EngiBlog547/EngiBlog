---
import MainLayout from "../layouts/MainLayout.astro"

import Link from "../components/Link.astro"
---

<MainLayout title="Página no encontrada" description="Error 404">
	<div class="container" style={{
        display: 'grid',
        placeItems: 'center',
        textAlign: 'center',
        gap: "var(--space-sm)",
    }}
    >
        <div>
            <h1 class="h1">¡Ups! Parece que te has perdido</h1>
            <p>La página que buscas no existe o ha sido removida.</p>
        </div>
        <Link href="/" style="secondary" text="Volver al inicio" 
        icon={{
            name: "home",
            side: "right",
        }}/>
    </div>
</MainLayout>